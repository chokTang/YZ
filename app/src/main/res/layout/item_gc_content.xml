<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.opensource.svgaplayer.SVGAImageView
                android:id="@+id/svga"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:autoPlay="true"
                app:loopCount="0"/>
            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/img_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:riv_oval="false"
                app:riv_corner_radius="3dp"
                android:src="@mipmap/default_pic"
                />
            <com.itheima.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:riv_corner_radius="3dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:riv_oval="false"
                android:src="@mipmap/icon_gradient_bg" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:id="@+id/ll_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_alignParentBottom="true"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/icon_eye_white"
                        />
                    <TextView
                        android:id="@+id/tv_watch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="11"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        />
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_tag"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限免"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_theme_3"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.8"
                    android:textColor="#FE434A"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@color/fontColorWhite"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="6dp"/>
            </RelativeLayout>
        </FrameLayout>




        <ImageView
            android:visibility="gone"
            android:id="@+id/img_collection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/selector_home_collection"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="法拉科技疯狂拉"
        android:textColor="@color/fontColor1"
        android:textSize="12sp" />
</LinearLayout>