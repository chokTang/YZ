<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray_10"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/li_top_one"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            android:background="@drawable/bg_gray_5_theme_strock"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:paddingTop="@dimen/dp_7"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_060606"
            android:paddingBottom="@dimen/dp_7"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/li_top_one"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message"
            android:background="@drawable/bg_white_5_white_theme_strock"
            android:layout_width="@dimen/dp_341"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:paddingTop="@dimen/dp_7"
            android:text=""
            android:textColor="@color/color_434343"
            android:paddingBottom="@dimen/dp_7"
            android:layout_height="wrap_content" />

    </LinearLayout>




</RelativeLayout>